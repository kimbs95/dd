<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
   <mapper namespace="com.dd.dealing.dao.DealingDAO">
   
	<resultMap id="noticeResult" type="noticeVO">
		<result property="Notice_Num" column="Notice_Num" />
		<result property="Notice_Title" column="Notice_Title" />
		<result property="Notice_Text" column="Notice_Text" />
		<result property="Notice_Date" column="Notice_Date" />
		<result property="Notice_Category" column="Notice_Category" />
		<result property="user_Id" column="user_Id" />
		
	
	</resultMap> 
	
		<!--공지사항 등록 -->
	  <insert id="insertnotice"  parameterType="noticeVO">
		<![CDATA[
		 insert into notice_t(Notice_Num,Notice_Title,Notice_Text,Notice_Date,Notice_Category,user_Id)
		 values(#{Notice_Num},#{Notice_Title},#{Notice_Text},#{Notice_Date},#{Notice_Category},#{user_Id})
		]]>
		  
	</insert>
	<!-- 공지사항 리스트 조회 -->
	<select id="selectAllNoticlesList" parameterType="noticeVO" resultMap="noticeResult">
		
	<![CDATA[
		SELECT Notice_Num,Notice_Title,Notice_Text,Notice_Date,Notice_Category,user_Id
 		FROM NOTICE_T 
		]]> 
		WHERE 1=1
		<if test='Notice_Num != null and Notice_Num != ""'>
		AND NOTICE_NUM = #{Notice_Num}
		</if>
		
		
	</select>
	 
	
	
	</mapper>